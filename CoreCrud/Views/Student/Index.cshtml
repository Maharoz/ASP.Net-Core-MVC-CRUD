@model IEnumerable<CoreCrud.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h4>Student Register</h4>
<hr/>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampusLocation)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fa fa-plus-square"></i>Student</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampusLocation)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.StudentId"><i class="fa fa-marker fa-lg"></i>Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
